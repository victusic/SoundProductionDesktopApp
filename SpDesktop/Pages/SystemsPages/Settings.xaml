<Page x:Class="SpDesktop.Pages.SystemsPages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpDesktop.Pages.SystemsPages"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Settings">

    <Grid>
        <Button Width="400" Background="#F7F6F3" Height="60" Margin="0,0,0,200" BorderThickness="0" Foreground="#37352F" Content="Светлая тема" FontSize="22" Style="{DynamicResource SettingsButton}" Click="Button_Click"></Button>
        <Button Width="400" Background="#373C3F" Height="60" Margin="0,200,0,0" BorderThickness="0" Foreground="#E9E9E9" Content="Тёмная тема" FontSize="22" Style="{DynamicResource SettingsButton}" Click="Button_Click_1"></Button>
    </Grid>
</Page>
